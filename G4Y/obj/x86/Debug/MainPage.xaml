<Page
    x:Class="G4Y.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:G4Y"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/wallpaper.jpg"/>
        </Grid.Background>
        <SplitView x:ConnectionId='1' x:Name="MySplitView" DisplayMode="CompactOverlay" IsPaneOpen="False" CompactPaneLength="50" OpenPaneLength="150" Margin="0 10 0 0">
            <SplitView.Background>
                <ImageBrush Stretch="Fill"/>
            </SplitView.Background>
            <SplitView.Pane>
                <StackPanel Background="Gray">
                    <Button x:ConnectionId='2' x:Name="buttonShowPanel" FontFamily="Segoe MDL2 Assets" Content="&#xE00F;" Width="50" Height="50" Background="Transparent"                              />
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='7' x:Name="TrainingMenu" FontFamily="Segoe MDL2 Assets" Content="&#xE753;" Width="50" Height="50" Background="Transparent"                             />
                        <TextBlock x:ConnectionId='8' Text="Trening" FontSize="18" VerticalAlignment="Center"                                              />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='5' x:Name="BodyMenu" FontFamily="Segoe MDL2 Assets" Content="&#xE8EF;" Width="50" Height="50" Background="Transparent"                          />
                        <TextBlock x:ConnectionId='6' Text="Waga" FontSize="18" VerticalAlignment="Center"                          />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='3' x:Name="Back" FontFamily="Segoe MDL2 Assets" Content="&#xE72B;" Width="50" Height="50" Background="Transparent"                      />
                        <TextBlock x:ConnectionId='4' Text="Wróć" FontSize="18" VerticalAlignment="Center"                     />
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>

    </Grid>
</Page>

