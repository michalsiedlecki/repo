<Page
    x:Class="G4Y.DescriptionOfTraining"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:G4Y"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView x:ConnectionId='1' x:Name="MySplitView" DisplayMode="CompactOverlay" IsPaneOpen="False" CompactPaneLength="50" OpenPaneLength="150" Margin="0 10 0 0">
            <SplitView.Pane>
                <StackPanel Background="Gray">
                    <Button x:ConnectionId='5' x:Name="buttonShowPanel" FontFamily="Segoe MDL2 Assets" Content="&#xE00F;" Width="50" Height="50" Background="Transparent"                              />
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='10' x:Name="TrainingMenu" FontFamily="Segoe MDL2 Assets" Content="&#xE753;" Width="50" Height="50" Background="Transparent"                             />
                        <TextBlock Text="Trening" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='8' x:Name="BodyMenu" FontFamily="Segoe MDL2 Assets" Content="&#xE8EF;" Width="50" Height="50" Background="Transparent"                          />
                        <TextBlock x:ConnectionId='9' Text="Waga" FontSize="18" VerticalAlignment="Center"                          />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='6' x:Name="Back" FontFamily="Segoe MDL2 Assets" Content="&#xE72B;" Width="50" Height="50" Background="Transparent"                      />
                        <TextBlock x:ConnectionId='7' Text="Wróć" FontSize="18" VerticalAlignment="Center"                     />
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
        <TextBox x:ConnectionId='2' x:Name="textBox" HorizontalAlignment="Left" Margin="150,56,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" IsReadOnly="True"/>
        <TextBox x:ConnectionId='3' x:Name="textBox1" HorizontalAlignment="Left" Margin="150,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" IsReadOnly="True"/>
        <Image x:ConnectionId='4' x:Name="Image" HorizontalAlignment="Left" Height="116" Margin="119,375,0,0" VerticalAlignment="Top" Width="100" />
    </Grid>
</Page>

